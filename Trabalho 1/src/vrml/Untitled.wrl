				translation	0 2.5 0

				children [
		
					Shape {

						geometry Cone { 
		
							bottomRadius 0.2

							height 0.5

						}

						appearance Appearance { 
		
							material Material { 
							
								diffuseColor IS	color

							}

						}

					}

				]

			}


			Transform {

				translation	0 1.25 0

				children [
		
					Shape {

						geometry Cylinder { 
			
							height 2.5

							radius 0.1

						}

						appearance Appearance {

							material Material { 
							
